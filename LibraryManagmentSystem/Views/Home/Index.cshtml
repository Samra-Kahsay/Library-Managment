@{
    ViewData["Title"] = "Library Managment System";
}
<h3>
    @ViewData["Title"]
</h3>


<style>
    .demo-card-wide.mdl-card {
        width: 920px;
    }

    .demo-card-wide > .mdl-card__title {
        color: #fff;
        height: 400px;
        background: url('../assets/demos/welcome_card.jpg') center / cover;
    }

    .demo-card-wide > .mdl-card__menu {
        color: #fff;
    }
</style>
<div class="mdl-grid" >
    <div class="mdl-cell mdl-cell--6-col" >
        <div class="demo-card-wide mdl-card mdl-shadow--2dp" >
            <div class="mdl-card__title mdl-card--expand" id="catalog" >
                <h2 class="mdl-card__title-text homeLabel">Library Catalog</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage library assets.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Catalog" asp-action="Index">
                    View Catalog
                </a>
            </div>
        </div>
    </div>

    
</div>
